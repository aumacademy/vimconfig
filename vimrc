set encoding=utf-8

set number
set relativenumber
set nowrap

set textwidth=77
set colorcolumn=77

set showmatch
set visualbell
set hlsearch
set smartcase
set ignorecase
set incsearch
set autoindent
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set expandtab
set ruler
set undolevels=100
set history=100
set spell
set backspace=indent,eol,start
set viminfo='100,<9999,s100
